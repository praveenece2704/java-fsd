<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC  
 "-//Hibernate/Hibernate Mapping DTD 5.3//EN"  
 "http://hibernate.sourceforge.net/hibernate-mapping-5.3.dtd">  
  
 <hibernate-mapping>  
  <class name="com.Product" table="productentry">  
    <id name="productid">  
     <generator class="assigned"></generator>  
    </id>  
            
    <property name="productname"></property>  
    <property name="productprice"></property>  
    <property name="supplierid"></property>
    <property name="categoryid"></property>
    <property name="availablecount"></property>           
  </class>       
 </hibernate-mapping>